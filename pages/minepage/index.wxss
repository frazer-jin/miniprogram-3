/**index.wxss**/
.container {
  padding: 5px;
}

.top_container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: top;
  justify-content: flex-start;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
} 

.top_container image {
  min-width: 100px;
  min-height: 100px;
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.content_container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  padding: 20rpx 5rpx;
  box-sizing: border-box;
} 

.content_container_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: stretch;
  justify-content: flex-start;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  align-items: center;
} 

.content_container_item image {
  min-width: 40px;
  min-height: 40px;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  margin-right: 10px;
}

.content_container_item text {
  border-bottom: 1px solid #eee;
  width: 100%;
  padding: 10px 0px;
  flex-shrink: 2;
}

.title_container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  margin: 0 auto;
}

.title_container button {
  margin-right: 10rpx;
}

.bottom_container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  border-top: 1px dashed #bbb;
} 

/* 在组件的样式文件中 */
.bottom-component {
  position: fixed; /* 或者 position: absolute; */
  bottom: 10px;
  width: 100%; /* 如果需要占满整个页面宽度 */
}


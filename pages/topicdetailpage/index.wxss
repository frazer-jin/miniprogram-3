/**index.wxss**/
.container {
  padding: 5px;
}

.top_container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
} 

.top_container image {
  min-width: 120px;
  min-height: 120px;
  width: 120px;
  height: 120px;
  border-radius: 50%;
}

.detail_box {
  padding-left: 20px;
}

.bottom_container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 20rpx 15rpx;
  box-sizing: border-box;
  border-top: 1px dashed #bbb;
} 
